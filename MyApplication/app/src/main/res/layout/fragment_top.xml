<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerOrigins"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enteries= "@array/Origins"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerDestination"
        android:layout_below="@+id/spinnerDestination"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:enteries="@array/Destinations"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonCaption"
        android:id="@+id/button"
        android:layout_below="@+id/spinnerDestination"
        android:layout_centerHorizontal="true" />
</RelativeLayout>